{
  "version": 2,
  "name": "lightkeeper",
  "alias": [
    "app.lightkeeper.dev"
  ],
  "env": {
    "APP_ID": "@app_id",
    "APP_NAME": "Lightkeeper",
    "BOT_NAME": "lightkeeper-ci[bot]",
    "EXEC_PATH": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
    "LIGHTHOUSE_URL": "@lighthouse_url",
    "LOG_LEVEL": "error",
    "NODE_ENV": "production",
    "PRIVATE_KEY": "@private_key",
    "WEBHOOK_SECRET": "@webhook_secret"
  },
  "builds": [
    {
      "src": "lighthouse/index.js",
      "use": "@nkzawa/now-node-raw",
      "config": {
        "includeFiles": [
          "lighthouse/node_modules/**"
        ],
        "maxLambdaSize": "100mb"
      }
    },
    {
      "src": "now/index.js",
      "use": "@now/node"
    },
    {
      "src": "now/run.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "^/lighthouse(/)?",
      "dest": "lighthouse/index.js",
      "methods": [
        "POST"
      ]
    },
    {
      "src": "^/.*",
      "status": 301,
      "headers": {
        "Location": "https://lightkeeper.dev/"
      },
      "methods": [
        "GET"
      ]
    },
    {
      "src": "^/$",
      "dest": "now/index.js",
      "methods": [
        "POST"
      ]
    },
    {
      "src": "^/run(/)?",
      "dest": "now/run.js",
      "methods": [
        "POST"
      ]
    },
    {
      "src": "^/.*",
      "status": 403,
      "methods": [
        "POST"
      ]
    }
  ]
}
