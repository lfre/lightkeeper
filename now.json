{
  "version": 2,
  "name": "lightkeeper",
  "alias": [
    "lightkeeper.alfre.do"
  ],
  "env": {
    "APP_ID": "@app_id",
    "APP_NAME": "Lightkeeper",
    "NODE_ENV": "production",
    "PRIVATE_KEY": "@private_key",
    "WEBHOOK_SECRET": "@webhook_secret"
  },
  "builds": [
    {
      "src": "lighthouse/index.js",
      "use": "@nkzawa/now-node-raw",
      "config": {
        "includeFiles": [
          "lighthouse/node_modules/**"
        ],
        "maxLambdaSize": "100mb"
      }
    },
    {
      "src": "now.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "^/(?!lighthouse).*",
      "dest": "/now.js"
    }
  ]
}
