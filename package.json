{
  "name": "lightkeeper",
  "version": "1.0.0",
  "description": "Github App to run Lighthouse tests in CI",
  "main": "app/index.js",
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "dev": "nodemon",
    "start": "probot run ./app/index.js",
    "test": "nyc --require esm ava",
    "lint": "eslint app/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lfre/lightkeeper.git"
  },
  "keywords": [
    "lighthouse",
    "tests",
    "budgets",
    "ci",
    "deployments"
  ],
  "author": "Alfredo Lopez <iam@>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lfre/lightkeeper/issues"
  },
  "homepage": "https://github.com/lfre/lightkeeper",
  "dependencies": {
    "@sindresorhus/slugify": "^0.9.1",
    "axios": "^0.21.1",
    "bytes": "^3.1.0",
    "handlebars": "^4.3.0",
    "lodash.find": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "probot": "^9.3.1"
  },
  "devDependencies": {
    "dotenv": "^8.0.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.1",
    "prettier-eslint": "^9.0.0",
    "prettier-eslint-cli": "^5.0.0",
    "smee-client": "^1.1.0"
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
